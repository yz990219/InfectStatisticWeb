        var myChart = echarts.init(document.getElementById('main'));
        var mydata1 = new Array();
        //mydate = ["衬衫", "羊毛衫", "雪纺衫", "子", "高跟鞋", "袜子"];
        mydata1[0] = "11";
        mydata1[1] = "22";
        mydata1[2] = "33";
        mydata1[3] = "44";
        mydata1[4] = "55";
        mydata1[5] = "66";
        // 指定图表的配置项和数据
        var option = {
            title: {
                text: '第一个 ECharts 实例'
            },
            tooltip: {},
            legend: {
                data: ['销量', '疑似']
            },
            xAxis: {
                data: mydata1
            },
            yAxis: {},
            series: [{
                name: '销量',
                type: 'line',
                data: [5, 20, 36, 10, 10, 20]

            }, {
                name: '疑似',
                type: 'line',
                data: [1, 25, 14, 16, 18, 300]

            }]
        };
        // 使用刚指定的配置项和数据显示图表。
        myChart.setOption(option);
    </script>

